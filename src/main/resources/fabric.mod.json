{
    "schemaVersion": 1,
    "id": "mod_id",
    "version": "${version}",

    "name": "Example Mod",
    "description": "Description",
    "authors": [
        "AVCD development team."
    ],
    "contact": {
        "homepage": "https://github.com/avcd-fabric-mods",
        "sources": "https://github.com/avcd-fabric-mods/*repository*"
    },

    "license": "CC0-1.0",
    "icon": "assets/*mod_id*/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "net.avcd.*mod_id*.*ExampleMod*"
        ]
    },
    "mixins": [
        "*mod_id*.mixins.json"
    ],

    "depends": {
        "fabricloader": ">=0.7.4",
        "fabric": "*",
        "minecraft": "1.16.x"
    },
    "suggests": {
        "flamingo": "*"
    }
}
